        <script src="@Url.Content("~/assets/js/ace-editable.min.js")"></script>
        <script src="@Url.Content("~/assets/js/jquery.maskedinput.min.js")"></script>*@

    <!-- ace scripts -->
    <script src="@Url.Content("~/assets/js/ace-elements.min.js")"></script>
    <script src="@Url.Content("~/assets/js/ace.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Common.js")"></script>
    @RenderSection("scripts", required: false)
