@model WFMPCP.Model.Web.LoginView
@{ Layout = null;}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>WFM PCP Login</title>

    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    @Styles.Render( "~/Content/jqalertcss" )
    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/font-awesome/4.5.0/css/font-awesome.min.css")" />

    <!-- text fonts -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/fonts.googleapis.com.css")" />

    <!-- ace styles -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/ace.min.css")" />

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="assets/css/ace-part2.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/ace-rtl.min.css")" />

    <!--[if lte IE 9]>
      <link rel="stylesheet" href="assets/css/ace-ie.min.css" />
    <![endif]-->
    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
    <script src="assets/js/html5shiv.min.js"></script>
    <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-layout blur-login">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-calendar green"></i>
                                <span class="red">WFM</span>
                                <span class="white" id="id-text2">PCP</span>
                            </h1>
                            <h6 class="blue" id="id-company-text" style="display:none;">&copy; Powered by Information Systems & Business Intelligence</h6>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-tasks green"></i>
                                            Please Enter Your Information
                                        </h4>

                                        <div class="space-6"></div>
@using( Html.BeginForm( "Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "frmLogin" } ) )
{@Html.AntiForgeryToken()

                                            <fieldset>
                                                    <h6 class="blue" id="id-company-text"><strong>NT Login (aa1234567)</strong></h6> 
                                                
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">                                                        
                                                        @Html.TextBoxFor( m => m.NTLogin, new { @id = "txtUsername", @class = "form-control", @maxlength = "50" } )
                                                        @*<input type="text" class="form-control" placeholder="NTLogin" />*@
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                </label>
                                                <h6 class="blue" id="id-company-text"><strong>Password</strong></h6> 
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.PasswordFor( m => m.Password, new { @id = "txtPassword", @class = "form-control", @maxlength = "50" } )
                                                        @*<input type="password" class="form-control" placeholder="Password" />*@
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <label class="inline">
                                                        @*<input type="checkbox" class="ace" />
                                                        <span class="lbl"> Remember Me</span>*@&nbsp;
                                                    </label>
                                                    <input type="submit" name="btnLogin" id="btnLogin" class="width-35 pull-right btn btn-sm btn-primary bigger-110" value="Login" />
                                                    @*<button type="button" class="width-35 pull-right btn btn-sm btn-primary" id="btnLogin">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">Login</span>
                                                    </button>*@
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                               
}
                                        <div class="social-or-login center">
                                            @*<span class="bigger-110">&nbsp;</span>*@
                                        </div>

                                        <div class="space-6"></div>
                                        <div class="center">
                                            <h6 class="blue" id="id-company-text">&copy; Powered by Information Systems & Business Intelligence</h6>
                                        </div>

                                        <div class="social-login center" style="display:none;">
                                            <a class="btn btn-primary">
                                                <i class="ace-icon fa fa-facebook"></i>
                                            </a>

                                            <a class="btn btn-info">
                                                <i class="ace-icon fa fa-twitter"></i>
                                            </a>

                                            <a class="btn btn-danger">
                                                <i class="ace-icon fa fa-google-plus"></i>
                                            </a>
                                        </div>
                                    </div><!-- /.widget-main -->
                                    
                                    <div class="toolbar clearfix">
                                        <div style="margin-left:80px;">
                                            <a href="#" data-target="#forgot-box" class="forgot-password-link">
                                                @*<i class="ace-icon fa fa-gear"></i>*@
                                                &nbsp;
                                            </a>
                                        </div>
                                        
                                    </div>
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->
                            
                        </div><!-- /.position-relative -->

                     
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="@Url.Content("~/assets/js/jquery-2.1.4.min.js")"></script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script src="assets/js/jquery-1.11.3.min.js"></script>
    <![endif]-->

    @*@Scripts.Render( "~/bundles/jquery" )*@
    @Scripts.Render( "~/bundles/jqalert" )
    <script src="~/Scripts/Common.js"></script>

    <script type="text/javascript">
        var urlmsg = '@Request.Params["msg"]';
        var msg = '';
       
        if ($.trim(urlmsg)) {
            $.alert({
                closeIcon: true,
                title: 'WFM PCP - Login',
                content: urlmsg 
            });
        }

        jQuery.fn.extend({
            IsValid: function () {
                var username = $.trim($("#txtUsername").val());
                //document.getElementById('txtUsrname').value;
                var password = $.trim($("#txtPassword").val());
                //document.getElementById('txtPassword').value;
                var msg = '';

                if (username == '') {
                    msg += 'NT Login is required <br />';
                }
                if (password == '') {
                    msg += 'Password is required. <br />';
                }

                if (msg == '') {
                    return true;
                }
                else {
                    $.alert({
                        closeIcon: true,
                        title: 'WFM PCP -  Login',
                        content: msg
                    });
                    return false;
                }
            }
        });
        $("#frmLogin").submit(function (e) {
            return $(e).IsValid();
            e.preventDefault();
        });

        window.onload = function () {
            var txtBox = document.getElementById("txtUsername");

            if (txtBox != null) {
                txtBox.focus();
            }
        };
    </script>
    <script type="text/javascript">
			if('ontouchstart' in document.documentElement) document.write("<script src='assets/js/jquery.mobile.custom.min.js'>"+"<"+"/script>");
    </script>
    <!-- inline scripts related to this page -->
    <script type="text/javascript">
			jQuery(function($) {
			 $(document).on('click', '.toolbar a[data-target]', function(e) {
				e.preventDefault();
				var target = $(this).data('target');
				$('.widget-box.visible').removeClass('visible');//hide others
				$(target).addClass('visible');//show target
			 });
			});
    </script>
</body>
</html>
