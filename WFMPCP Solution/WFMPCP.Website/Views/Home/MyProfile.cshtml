@model WFMPCP.Model.UserRoleViewModel
@{
	ViewBag.Title = "WFMPCP | My Profile";
	//Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h1>
        My Profile
    </h1>
</div>
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> NT Login </label>

                <div class="col-sm-9">
                    <input type="text" id="txtNtLogin" value="@Model.NTLogin" class="col-xs-10 col-sm-5" readonly />
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Role </label>

                <div class="col-sm-9">
                    <input type="text" id="txtRole" class="col-xs-10 col-sm-5" value="@Model.RoleVM.Name" readonly />
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Employee ID </label>

                <div class="col-sm-9">
                    <input type="text" id="txtEmployeeID" class="col-xs-10 col-sm-5" value="@Model.EmployeeID" readonly />
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Status </label>
                @{ 
                    var status = "Active";
                    if(Model.Active==false)
                    {
                        status = "Inactive";
                    }
                }
                <div class="col-sm-9">
                    <input type="text" id="txtStatus" class="col-xs-10 col-sm-5" value="@status" readonly />
                </div>
            </div>

            <div class="clearfix form-actions" style="display:none;">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="button">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Submit
                    </button>

                    @*&nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>*@
                </div>
            </div>

            <div class="hr hr-24"></div>

            <!-- /.row -->
        </form>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->